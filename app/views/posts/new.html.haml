.post
  = render 'sub-header'

  -# メイン
  .contents.row
    .container
      = form_with(model: @post, local: true) do |form|
        %h3
          投稿する
        = form.text_field :name, placeholder: "Nickname"
        = form.text_field :image, placeholder: "Image Url"
        = form.text_area :text, placeholder: "text" , rows: "10"
        = form.submit "SEND"
  -# フッター
  = render 'footer'